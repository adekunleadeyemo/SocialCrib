<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectTopics">

        <ProgressBar
            android:id="@+id/topic_progress"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:indeterminateTint="@color/accent"
            />

        <LinearLayout
            android:id="@+id/topic_main_div"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:gravity="center"
            android:weightSum="100"
            android:orientation="vertical"
            android:visibility="gone"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10"
                android:textAlignment="center"
                android:text="@string/topic_intro"
                android:textStyle="bold"
                android:textSize="24sp"

                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/topic_recycleview"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="70"
                tools:listitem="@layout/topic_view"
                />

                <LinearLayout
                    android:id="@+id/topic_action_btn"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="8"
                    android:layout_marginVertical="10sp"
                    android:background="@drawable/action_btn"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="18sp"
                    app:layout_constraintTop_toBottomOf="@id/user_h4a"

                    >
                    <ProgressBar
                        android:id="@+id/topic_action_btn_load"
                        android:visibility="gone"
                        android:layout_width="30dp"
                        android:layout_height="25dp"
                        android:indeterminate="true"
                        android:indeterminateTint="@color/white"/>

                    <TextView
                        android:id="@+id/user_action_btn_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/next"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginHorizontal="5dp"
                        android:src="@drawable/arrow_fwd_body"
                        app:tint="@color/white" />
                </LinearLayout>

                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="5"
                    android:text="@string/user_intro_footer"
                    android:textColor="@color/accent"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginVertical="5sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />
            </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
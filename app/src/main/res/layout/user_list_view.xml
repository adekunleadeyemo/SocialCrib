<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginVertical="10sp"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/img1_div"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >
            <ImageView
                android:id="@+id/user_img1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/empty_profile"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <ImageView
                android:id="@+id/user_select1"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_marginEnd="-10dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/add_plus"
                android:background="@drawable/intro_img_bg"
                android:backgroundTint="@color/white_bg"
                app:layout_constraintBottom_toBottomOf="@id/user_img1"
                app:layout_constraintEnd_toEndOf="@id/user_img1"
                />

            <TextView
                android:id="@+id/user_img_txt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:text="@string/user_img_txt"
                android:textColor="@color/text_hint"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/user_img1" />

        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:id="@+id/img2_div"
            app:layout_constraintStart_toEndOf="@id/img1_div"
            app:layout_constraintTop_toTopOf="parent"
            >
            <ImageView
                android:id="@+id/user_img2"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/empty_profile"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/user_select2"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_marginEnd="-10dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/add_plus"
                android:background="@drawable/intro_img_bg"
                android:backgroundTint="@color/white_bg"
                app:layout_constraintBottom_toBottomOf="@id/user_img2"
                app:layout_constraintEnd_toEndOf="@id/user_img2"
            />

            <TextView
                android:id="@+id/user_img_txt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:text="@string/user_img_txt"
                android:textColor="@color/text_hint"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/user_img2" />

        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:id="@+id/img3_div"
            app:layout_constraintStart_toEndOf="@id/img2_div"
            app:layout_constraintTop_toTopOf="parent"
            >
            <ImageView
                android:id="@+id/user_img3"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/empty_profile"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/user_select3"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_marginEnd="-10dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/add_plus"
                android:background="@drawable/intro_img_bg"
                android:backgroundTint="@color/white_bg"
                app:layout_constraintBottom_toBottomOf="@id/user_img3"
                app:layout_constraintEnd_toEndOf="@id/user_img3" />

            <TextView
                android:id="@+id/user_img_txt3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:text="@string/user_img_txt"
                android:textColor="@color/text_hint"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/user_img3" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
